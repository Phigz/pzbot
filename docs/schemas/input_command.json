{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bot Input Command",
  "description": "A packet sent from the Bot Brain to the PZ Bridge via Socket.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique UUID for this command batch. Used for acknowledgement."
    },
    "timestamp": {
      "type": "integer",
      "description": "Unix timestamp in ms sending time."
    },
    "clear_queue": {
      "type": "boolean",
      "description": "If true, clears all current pending actions before adding these.",
      "default": false
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "pathfind",
              "move_direct",
              "face_location",
              "interact_world",
              "inventory_transfer",
              "equip_item",
              "unequip_item",
              "consume_item",
              "smash_window",
              "open_door",
              "close_door",
              "attack",
              "wait"
            ]
          },
          "params": {
            "type": "object",
            "description": "Parameters specific to the action type."
          }
        },
        "required": ["type"]
      }
    }
  },
  "required": ["id", "actions"]
}
